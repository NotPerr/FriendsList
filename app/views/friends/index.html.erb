
<div class="container p">


<h1>Friends List</h1>

<div id="friends" class="d-md-flex flex-wrap justify-content-around">
  <% @friends.each do |friend| %>
    <div>
      <%= render friend %>
      <%= link_to "Show this friend", friend ,class:"btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path ,class:"btn btn-secondary m" %>
</div>

